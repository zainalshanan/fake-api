{
    "name": "fake-api",
    "version": "1.0.0",
    "description": "A powerful tool that automatically generates mock API endpoints, fake data, and starts a server based on your Swagger/OpenAPI specification.",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "generate": "ts-node src/index.ts generate",
        "mock": "ts-node src/index.ts mock",
        "serve": "ts-node src/index.ts serve",
        "start": "npm run serve",
        "test": "mocha -r ts-node/register 'tests/**/*.test.ts'",
        "test:watch": "mocha -r ts-node/register 'tests/**/*.test.ts' --watch",
        "test:coverage": "nyc npm test"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@apidevtools/swagger-parser": "^10.1.1",
        "@types/express": "^4.17.14",
        "axios": "^1.6.7",
        "commander": "^11.1.0",
        "express": "^4.18.2",
        "express-openapi-validator": "^5.5.0",
        "lowdb": "^7.0.1",
        "openapi-types": "^12.1.3",
        "yaml": "^2.3.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.1.6",
        "@types/sinon": "^10.0.15",
        "@types/supertest": "^2.0.12",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "sinon": "^15.2.0",
        "supertest": "^6.3.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        }
    }
}
